<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="#000099FF" >
<ImageView android:id="@+id/contact_image"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:paddingRight="10dp"
    android:paddingTop = "50dp" />             
<TextView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/contact_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:padding="10dp"
    android:textSize="24sp" />
<TextView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/date_of_birth"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/contact_name"
    android:layout_alignLeft="@id/contact_name"
    android:padding="10dp"
    android:textSize="16sp" />
<TextView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/next_bday"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/date_of_birth"
    android:layout_alignLeft="@id/date_of_birth"
    android:padding="10dp"
    android:textSize="16sp" />
</RelativeLayout>