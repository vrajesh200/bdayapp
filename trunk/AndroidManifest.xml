<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.bdayapp"
      android:versionCode="1"
      android:versionName="1.0">
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".BdayNotifier"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    <activity android:name="ContactPage"></activity>
    <activity android:name="SettingsPage"></activity>
    <receiver  android:process=":remote" android:name="AlarmReceiver"></receiver>
    <service android:name="com.bdayapp.AlarmService"  
            android:exported="true" android:label="@string/app_name">
		<intent-filter><action android:name="com.bdayapp.AlarmService"></action>
   		</intent-filter>
	</service>
</application>
    <uses-sdk android:minSdkVersion="11" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    

<uses-permission android:name="android.permission.VIBRATE"></uses-permission>
</manifest>